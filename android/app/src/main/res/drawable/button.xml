<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- button state when not activated -->
    <item
        android:state_activated="false">
        <shape>
            <solid
                android:color="@color/button_non_active">
            </solid>
            <stroke
                android:color="@color/button_corners"
                android:width="2dp">
            </stroke>
            <corners
                android:radius="150dp">
            </corners>
        </shape>
    </item>

    <!-- button state when active -->
    <item
        android:state_activated="true">
        <shape>
            <solid
                android:color="@color/button_active">
            </solid>
            <stroke
                android:color="@color/button_corners"
                android:width="2dp">
            </stroke>
            <corners
                android:radius="150dp">
            </corners>
        </shape>
    </item>

</selector>